<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- LIGHT THEME -->
    <style name="Theme.RunApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryContainer">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryContainer">@color/accentColor</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/backgroundLight</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Custom dialog theme -->
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <!-- DARK THEME -->
    <style name="Theme.RunApp.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryContainer">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>

        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Dialog theme -->
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
    </style>


    <!-- DIALOG THEME -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Medium</item>
    </style>

</resources>
